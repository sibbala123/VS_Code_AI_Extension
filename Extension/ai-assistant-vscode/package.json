{
  "name": "ai-assistant-vscode",
  "displayName": "ai-assistant-vscode",
  "description": "",
  "version": "0.0.1",
  "publisher": "ai-assistant",
  "engines": {
    "vscode": "^1.106.1"
  },
  "categories": [
    "Other"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "aiAssistant.openChat",
        "title": "AI Assistant: Open Chat"
      }
    ],
    "configuration": {
      "type": "object",
      "title": "AI Assistant Settings",
      "properties": {
        "aiAssistant.backendUrl": {
          "type": "string",
          "default": "http://localhost:8000/query",
          "description": "Backend URL for the AI Assistant"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.10",
    "@types/node": "22.x",
    "@types/node-fetch": "^2.6.13",
    "@types/vscode": "^1.106.1",
    "@vscode/test-cli": "^0.0.12",
    "@vscode/test-electron": "^2.5.2",
    "eslint": "^9.39.1",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.46.3"
  },
  "dependencies": {
    "node-fetch": "^3.3.2"
  }
}